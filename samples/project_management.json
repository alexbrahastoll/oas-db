{
  "openapi": "3.0.3",
  "info": {
    "title": "Project management API",
    "description": "API that allows one to manage ongoing projects in a company (e.g., create / read / update / delete projects).",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "https://example.com/project_management"
    }
  ],
  "paths": {
    "/project.json": {
      "post": {
        "summary": "Creates a new project.",
        "operationId": "create_project",
        "tags": [
          "project"
        ],
        "requestBody": {
          "description": "The project to be created.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/ProjectProperties" },
                  { "$ref": "#/components/schemas/ProjectRequiredProperties" }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProjectId"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates a given project.",
        "operationId": "update_project",
        "tags": [
          "project"
        ],
        "parameters": [
          { "$ref": "#/components/parameters/ProjectId" }
        ],
        "requestBody": {
          "description": "The project's updated properties.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/ProjectProperties" },
                  { "$ref": "#/components/schemas/ProjectRequiredProperties" }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK."
          },
          "404": {
            "description": "Not found."
          }
        }
      }
    },
    "read_project_.json": {
      "get": {
        "summary": "Retrieves information from an existing project.",
        "operationId": "read_project",
        "tags": [
          "project"
        ],
        "parameters": [
          { "$ref": "#/components/parameters/ProjectId" }
        ],
        "responses": {
          "302": {
            "description": "OK.",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ProjectId" },
                    { "$ref": "#/components/schemas/ProjectProperties" }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Not found."
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "ProjectId": {
        "name": "project_id",
        "description": "The id of a project.",
        "in": "query",
        "required": true,
        "schema": {
          "$ref": "#/components/schemas/Id"
        }
      }
    },
    "schemas": {
      "Id": {
        "description": "A generic integer ID.",
        "type": "integer",
        "format": "int64"
      },
      "ProjectId": {
        "description": "The unique identifier of a project.",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          }
        }
      },
      "ProjectProperties": {
        "type": "object",
        "description": "The properties of a project.",
        "properties": {
          "name": {
            "description": "The name of the project.",
            "type": "string"
          },
          "description": {
            "description": "A meaningful description of the project.",
            "type": "string"
          }
        }
      },
      "ProjectRequiredProperties": {
        "type": "object",
        "description": "Component that specifies the required properties of a project.",
        "required": [
          "name",
          "description"
        ]
      }
    }
  }
}
